<!DOCTYPE html>
<html lang="en">
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <header>
      <% include ./partials/header %>
    </header>
    <main>
      <h2>View All books</h2>
      <% if(books.length === 0) { %>
      <h2>No book available</h2>
      <% }else { %>
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Book Title</th>
            <th>Author</th>
            <th>Genre</th>
          </tr>
        </thead>
        <tbody>
          <% books.forEach((book) => { %>
          <tr class="active">
            <td><a href="/book/view/<%=book._id%>"><%= book.title %></a></td>
            <td><%= book.author %></td>
            <td><%= book.genre %></td>
          </tr>
          <% }) } %>
        </tbody>
      </table>
    </main>
  </body>
</html>
